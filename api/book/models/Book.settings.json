{
  "connection": "default",
  "collectionName": "books",
  "info": {
    "name": "book",
    "description": "A sample app"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "bookName": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "bookCover": {
      "required": true,
      "type": "string"
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": "0"
    },
    "author": {
      "required": true,
      "type": "json"
    },
    "publishedDate": {
      "required": true,
      "type": "date"
    }
  }
}